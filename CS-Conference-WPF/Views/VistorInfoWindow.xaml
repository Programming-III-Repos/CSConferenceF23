<Window x:Class="CS_Conference_WPF.Views.VistorInfoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CS_Conference_WPF.Views"
        mc:Ignorable="d"
        Title="Vistor Info Window" Height="450" Width="400">
    
    <StackPanel Margin="10">

        <Label Content="Name" FontWeight="Bold"/>
        <TextBox Text="{Binding Name}"/>
        
        <Label Content="Speaker" FontWeight="Bold"/>
        <Label Content="{Binding IsSpeaker}"/>
        
        <Label Content="Status" FontWeight="Bold"/>
        <Label Content="{Binding VisitorStatus}"/>
        
        <Label Content="Checkin Date" FontWeight="Bold"/>
        <DatePicker SelectedDate="{Binding CheckInDate}"/>

    </StackPanel>
</Window>
